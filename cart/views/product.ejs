<%- include('includes/header.ejs') %>
    <script src="/auth.js"></script>
  </head>
  <body>
    <%- include('includes/navigation.ejs') %>
    <main>
      <h2>상품목록</h2>
      <table id="productTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="productTableBody">
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.id %></td>
              <td><img src="<%= product.image %>" alt=""></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><button onclick=addProduct(<%= product.id %>)>담기</button></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <a href="/mycart">내 장바구니 이동</a>
    </main>
  </body>
</html>
